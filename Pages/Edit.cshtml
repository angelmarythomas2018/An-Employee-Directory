@page
@model EmployeeMangement.Pages.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
             <input type="hidden" asp-for="Employee.EmpID"/> 
            @* <div class="form-group">
                <label class="col-sm-4 col-form-label">Employee ID</label>
                <input readonly class="form-control-plaintext" value="@Model.Employee.EmpID">
               
            </div>  *@
            <div class="form-group">
                <label class="col-sm-4 col-form-label">Employee Name</label>
                <input asp-for="Employee.EmpName" class="form-control" />
                <span asp-validation-for="Employee.EmpName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-form-label">Email</label>
                <input asp-for="Employee.EmpEmail" class="form-control" />
                <span asp-validation-for="Employee.EmpEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-form-label"> Department</label>
                <select asp-for="Employee.Department.DepartmentName" class="form-control" asp-items="Model.DepartmentOptions">
                    <option value="">--Select Department--</option>
                </select>

                <span asp-validation-for="Employee.Department.DepartmentName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="col-sm-4 col-form-label">Phone Number</label>
                <input asp-for="Employee.EmpPhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.EmpPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a class="btn btn-success" asp-page="/Admin"> Employee List</a>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
