@page
@model EmployeeMangement.Pages.AddDepartmentModel
@{
    ViewData["Title"] = "Add Department";
}
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label class="col-sm-4 col-form-label">Department Name</label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for = "Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="AddDepartment" class="btn btn-primary" />
                <a class="btn btn-success" asp-page="/Admin"> Employee List</a>
            </div>
           
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}